{% extends 'layots/admin/admin.html.twig' %}

{% block title %}Панель администратора - Новость {{ news.id}}{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">{{ news.title}}</h1>
    </div>

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <div class="col">
          <div class="card shadow-sm">
            <img src="{{ news.image }}" class="card-img-top" alt="...">
            <div class="card-body">
              <p class="card-text">{{ news.text }}</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{ path('admin_news_update', {'news': news.id}) }}"><button type="button" class="btn btn-sm btn-outline-secondary">Редактировать</button></a>
                  <a href="{{ path('admin_news_delete', {'news': news.id}) }}"><button type="button" class="btn btn-sm btn-outline-secondary">Удалить</button></a>
                </div>
            
              </div>
            </div>
          </div>
        </div>
    </div
     
{% endblock %}