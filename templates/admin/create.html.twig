{% extends 'layots/admin/admin.html.twig' %}

{% block title %}Панель администратора - Добавить новость{% endblock %}

{% block content %}
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Добавить новость</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
    </div>
  </div>
 
 
{{ form_start(form) }}
    {{ form_errors(form) }}
    
    <div class="form-group">
        <div class="label">{{ form_label(form.title)}}</div>
        <div class="input">{{ form_widget(form.title)}}</div> 
    </div>
    <div class="form-group">
        <div class="label">{{ form_label(form.text)}}</div>
        <div class="input">{{ form_widget(form.text)}}</div> 
    </div>
    <div class="form-group">
        <div class="label">{{ form_label(form.image)}}</div>
        <div class="input">{{ form_widget(form.image)}}</div> 
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
       
{{ form_end(form) }}
</div>
{% endblock %}